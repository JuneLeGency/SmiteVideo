<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:blur="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_margin="5dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#46CF"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/video_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#99cc00"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Large Text"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/commentator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="Small Text"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#FFF" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/video_snap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="matrix"
                android:src="@drawable/no_signal" />

            <TextView
                android:id="@+id/duration"
                android:background="#33b5e5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFF"
                android:textSize="30sp"
                android:gravity="end"
                android:text="11:25"
                android:typeface="monospace"
                android:layout_marginBottom="20dp"
                android:paddingLeft="30dp"
                android:paddingRight="10dp"
                android:layout_alignBottom="@+id/video_snap"
                android:layout_alignRight="@+id/video_snap"
                 />
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>